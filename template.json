{
  "variables": {
    "alpine_iso":
      "http://dl-cdn.alpinelinux.org/alpine/v3.7/releases/x86_64/alpine-virt-3.7.0-x86_64.iso",
    "alpine_iso_checksum":
      "5a4b2588afd32e7024dd61d9558b77b03a4f3189cb4c9fc05e9e944fb780acdd",
    "root_password": "changeme"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "alpine",
      "guest_additions_mode": "disable",
      "boot_command": [
        "root<enter><wait>",
        "setup-alpine<enter><wait>",
        "none<enter>",
        "alpine<enter>",
        "eth0<enter>",
        "dhcp<enter>",
        "no<enter>",
        "<wait5>",
        "{{user `root_password`}}<enter>",
        "{{user `root_password`}}<enter>",
        "<wait>",
        "UTC<enter>",
        "<wait>",
        "none<enter>",
        "f<enter>",
        "<wait10><wait10><wait5>",
        "openssh<enter>",
        "<wait5>",
        "chrony<enter>",
        "<wait10>",
        "sda<enter>",
        "sys<enter><wait5>",
        "y<enter>",
        "<wait10><wait10>",
        "mount /dev/sda3 /mnt<enter>",
        "chroot /mnt<enter>",
        "adduser packer<enter><wait>",
        "{{user `root_password`}}<enter>",
        "{{user `root_password`}}<enter><wait>",
        "exit<enter>",
        "sync<enter>",
        "reboot<enter>"
      ],
      "boot_wait": "20s",
      "guest_os_type": "Linux26_64",
      "headless": false,
      "iso_urls": ["{{user `alpine_iso`}}"],
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{user `alpine_iso_checksum`}}",
      "ssh_username": "packer",
      "ssh_password": "{{user `root_password`}}",
      "ssh_wait_timeout": "5m",
      "shutdown_command": "echo '{{user `root_password`}}' | su -c poweroff"
    }
  ]
}
